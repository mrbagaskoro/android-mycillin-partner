<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul.todo.completion.CompletePrescriptionsFragment" >

    <LinearLayout
        android:id="@+id/completePrescriptionsFragment_ll_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/completePrescriptionsFragment_tv_infoDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/primaryText"
            android:textSize="15sp"
            android:text="@string/completePrescriptionsFragment_infoDesc" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/completePrescriptionsFragment_ll_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryText"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="@string/completePrescriptionsFragment_togglePrescriptionsInfo"/>

                <ToggleButton
                    android:id="@+id/completePrescriptionsFragment_tb_togglePrescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small" >

                <EditText
                    android:id="@+id/accountDetailActivity_et_prescriptionType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/completePrescriptionsFragment_prescriptionType"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>