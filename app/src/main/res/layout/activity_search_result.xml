<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical">

    <include layout="@layout/component_toolbar" />

    <EditText
        android:id="@+id/searchResult_ET_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:drawableEnd="@drawable/ic_magni"
        android:hint="@string/find"
        android:inputType="text" />

    <TextView
        android:id="@+id/searchResult_TV_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/frame_alt_3"
        android:padding="@dimen/spacing_small"
        android:textColor="@color/gray"
        tools:text="0 FINDED ENTRY" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchResult_RV_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
